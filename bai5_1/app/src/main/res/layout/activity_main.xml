<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/TableLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:stretchColumns="1"
    tools:context=".MainActivity">

    <TableRow
        android:id="@+id/tableRow4">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_span="2"
            android:background="#008242"
            android:gravity="center"
            android:padding="10dp"
            android:text="Chuyển đổi năm dương lịch"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </TableRow>
    <TableRow
        android:id="@+id/tableRow1">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="15dp"
            android:text="Năm dương lịch:"
            android:textSize="17sp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/editnamduonglich"
            android:text="2013"
            android:paddingLeft="10dp"
            android:textSize="23sp"/>
    </TableRow>
    <TableRow
        android:id="@+id/tableRow2">

        <Button
            android:id="@+id/button1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chuyển đổi"
            android:layout_column="1"
            android:textSize="17sp"
            app:cornerRadius="0dp"
            android:textColor="@color/black"
            android:backgroundTint="#9B9B9B"/>
    </TableRow>
    <TableRow
        android:id="@+id/tableRow3">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingTop="8dp"
            android:text="Năm âm lịch:"
            android:textSize="17sp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Quý tỵ"
            android:paddingTop="3dp"
            android:background="#FFDA54"
            android:textSize="23sp" />
    </TableRow>
    <TextView
        android:id="@+id/textView4"
        android:background="#008242"
        />
</TableLayout>